            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Tech Corp Updated\",\n    \"industry\": \"Technology\",\n    \"location\": \"San Francisco, CA\",\n    \"website\": \"https://techcorp.com\",\n    \"description\": \"Updated description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/v1/companies/1",
              "host": ["{{base_url}}"],
              "path": ["v1", "companies", "1"]
            }
          }
        }
      ]
