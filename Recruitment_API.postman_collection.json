              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/companies?skip=0&limit=10",
              "host": ["{{base_url}}"],
              "path": ["v1", "companies"],
              "query": [
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is an array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Company",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/companies/1",
              "host": ["{{base_url}}"],
              "path": ["v1", "companies", "1"]
            }
          }
        },
        {
          "name": "Create Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Tech Corp\",\n    \"industry\": \"Technology\",\n    \"location\": \"San Francisco, CA\",\n    \"website\": \"https://techcorp.com\",\n    \"description\": \"Leading technology company\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/v1/companies",
              "host": ["{{base_url}}"],
              "path": ["v1", "companies"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Company is created with correct data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var requestData = JSON.parse(request.data);",
                  "    pm.expect(jsonData.name).to.eql(requestData.name);",
                  "    pm.expect(jsonData.industry).to.eql(requestData.industry);",
                  "    pm.environment.set(\"company_id\", jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Company",
          "request": {
            "method": "PUT",
