{
    "info": {
        "name": "Library Management System",
        "description": "API collection for Library Management System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": ["{{base_url}}"],
                    "path": ["health"]
                }
            }
        },
        {
            "name": "Books",
            "item": [
                {
                    "name": "List Books",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/v1/books?skip=0&limit=10",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "books"],
                            "query": [
                                {
                                    "key": "skip",
                                    "value": "0"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Book",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/v1/books/1",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "books", "1"]
                        }
                    }
                },
                {
                    "name": "Create Book",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/v1/books",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "books"]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"The Great Gatsby\",\n    \"author\": \"F. Scott Fitzgerald\",\n    \"isbn\": \"978-0743273565\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Members",
            "item": [
                {
                    "name": "List Members",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/v1/members?skip=0&limit=10",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "members"],
                            "query": [
                                {
                                    "key": "skip",
                                    "value": "0"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Member",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/v1/members/1",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "members", "1"]
                        }
                    }
                },
                {
                    "name": "Create Member",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/v1/members",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "members"]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Loans",
            "item": [
                {
                    "name": "Create Loan",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/v1/loans",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "loans"]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"book_id\": 1,\n    \"member_id\": 1,\n    \"loan_date\": \"2024-03-19T10:00:00Z\"\n}"
                        }
                    }
                },
                {
                    "name": "Return Book",
                    "request": {
                        "method": "PUT",
                        "url": {
                            "raw": "{{base_url}}/v1/loans/1/return",
                            "host": ["{{base_url}}"],
                            "path": ["v1", "loans", "1", "return"]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        }
    ]
} 